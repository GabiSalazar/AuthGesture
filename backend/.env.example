# ============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================================================
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ============================================================================
# CORS - URLs permitidas (actualizar con URL de Render después)
# ============================================================================
BACKEND_CORS_ORIGINS=["https://authgesture.com","http://localhost:5173"]

# ============================================================================
# URLs DE LA APLICACIÓN
# ============================================================================
FRONTEND_URL=https://authgesture.com
BACKEND_URL=https://your-backend-url.onrender.com

# ============================================================================
# SENDGRID - VERIFICACIÓN DE EMAIL
# ============================================================================
SENDGRID_API_KEY=SG.your_sendgrid_key_here
SENDGRID_FROM_EMAIL=noreply@authgesture.com
SENDGRID_FROM_NAME=Auth-Gesture Sistema Biométrico
EMAIL_FROM=noreply@authgesture.com
EMAIL_FROM_NAME=Auth-Gesture Sistema Biométrico

# ============================================================================
# CONFIGURACIÓN DE VERIFICACIÓN DE EMAIL
# ============================================================================
EMAIL_VERIFICATION_EXPIRY_MINUTES=30
EMAIL_RESEND_COOLDOWN_SECONDS=60

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_key_here

# ============================================================================
# SEGURIDAD - JWT
# ============================================================================
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# ADMIN AUTHENTICATION
# ============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
ADMIN_JWT_EXPIRATION_HOURS=8

# ============================================================================
# BIOMETRIC JWT (para Plugin)
# ============================================================================
BIOMETRIC_JWT_SECRET=your_biometric_jwt_secret_here
BIOMETRIC_JWT_EXPIRATION_HOURS=1

# ============================================================================
# RUTAS DE DATOS BIOMÉTRICOS
# ============================================================================
BIOMETRIC_DATA_PATH=biometric_data
EMAIL_VERIFICATIONS_PATH=biometric_data/email_verifications

# ============================================================================
# PLUGIN API CONFIGURATION
# ============================================================================
PLUGIN_API_KEY=your_plugin_api_key_here